@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <div>
                            <h4 class="mb-0">Kategoriler</h4>
                            <small class="text-muted">Toplam: <span class="badge badge-light">@Model?.Count</span></small>
                        </div>

                        <div class="card-header-action">
                            <a href="/AdminCategory/CreateCategory/" class="btn btn-info">
                                <i class="fas fa-plus"></i> Yeni Kategori
                            </a>
                        </div>
                    </div>

                    <div class="card-body">

                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th style="width:70px">#</th>
                                            <th>Kategori Adı</th>
                                            <th class="text-center" style="width:140px">Sil</th>
                                            <th class="text-center" style="width:160px">Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td>
                                                    <span class="badge badge-secondary">@count</span>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <span class="badge badge-primary mr-2">
                                                            <i class="fas fa-tag"></i>
                                                        </span>
                                                        <strong>@item.CategoryName</strong>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <a href="/AdminCategory/DeleteCategory/@item.CategoryId"
                                                       class="btn btn-danger btn-sm"
                                                       onclick="return confirm('Bu kategoriyi silmek istediğine emin misin?');">
                                                        <i class="fas fa-trash"></i> Sil
                                                    </a>
                                                </td>
                                                <td class="text-center">
                                                    <a href="/AdminCategory/UpdateCategory/@item.CategoryId"
                                                       class="btn btn-success btn-sm">
                                                        <i class="fas fa-pen"></i> Güncelle
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                    </div>

                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt"></i> İşlemler admin panel üzerinden yapılır.
                        </small>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
