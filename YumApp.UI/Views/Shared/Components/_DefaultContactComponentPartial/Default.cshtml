@model CreateMessageDto
<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Sizlere Daha İyi Hizmet Verebilmek İçin Bize Ulaşın</h2>
        <p><span>Bir Dilek Hakkınız Mı Var ?</span> <span class="description-title">İletişime Geçiniz</span></p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        @await Component.InvokeAsync("_DefaultContactDetailComponentPartial")

        <form asp-action="SendMessage" asp-controller="Contact" method="post" class="php-email-form" >
            <div class="row gy-4">

                <div class="col-md-6">
                    <input type="text" asp-for="NameSurname" class="form-control" placeholder="İsim Soyisim" required="">
                </div>

                <div class="col-md-6 ">
                    <input type="email" class="form-control" asp-for="Email" placeholder="Email" required="">
                </div>

                <div class="col-md-12">
                    <input type="text" class="form-control" asp-for="Subject" placeholder="Konu" required="">
                </div>

                <div class="col-md-12">
                    <textarea class="form-control" asp-for="MessageDetails" rows="6" placeholder="Mesajın İçeriği" required=""></textarea>
                </div>
                <div class="col-md-12 text-center">
                    <div class="loading">Yükleniyor</div>
                    <div class="error-message"></div>
                    <div class="sent-message">Mesaj Başarıyla Gönderildi.Yorumunuz İçin Teşekkür Ederiz...</div>
                    <button type="submit">Mesaj Gönder</button>
                </div>
            </div>
        </form>
    </div>
</section>
