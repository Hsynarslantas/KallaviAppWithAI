@model List<ResultAboutDto>
<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımızda<br></h2>
        <p><span>Daha Fazlası</span> <span class="description-title">Bizim Hikayemiz</span></p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">
            @foreach(var item in Model)
            {
            <div class="col-lg-7" data-aos="fade-up" data-aos-delay="100">
                <img src="@item.ImageUrl" class="img-fluid mb-4" alt="">
                <div class="book-a-table">
                    <h3>Sizde Yerinizi Ayırtın</h3>
                    <p>@item.ReservationNumber</p>
                </div>
            </div>
            <div class="col-lg-5" data-aos="fade-up" data-aos-delay="250">
                <div class="content ps-0 ps-lg-5">
                    <p class="fst-italic">
                       @item.Title
                    </p>
                    <ul>
                            <li>
                                <i class="bi bi-check-circle-fill"></i>
                                <span>
                                    Türk mutfağının asırlık tariflerini, kültürümüzün özüyle birlikte
                                    ustaların elinden çıkan özgün lezzetlere dönüştürüyoruz.
                                </span>
                            </li>

                            <li>
                                <i class="bi bi-check-circle-fill"></i>
                                <span>
                                    Saray mutfağından Anadolu sofralarına uzanan yemekleri,
                                    modern dokunuşlarla yeniden yorumlayarak benzersiz bir deneyim sunuyoruz.
                                </span>
                            </li>

                            <li>
                                <i class="bi bi-check-circle-fill"></i>
                                <span>
                                    Geleneksel Türk yemeklerine sadık kalarak geliştirdiğimiz özel tariflerle,
                                    geçmişin lezzetini bugünün damak zevkiyle buluşturuyoruz.
                                </span>
                            </li>

                    </ul>
                    <p>
                    @item.Description
                    </p>

                    <div class="position-relative mt-4">
                        <img src="@item.VideoCoverImageUrl" class="img-fluid" alt="">
                        <a href="@item.VideoUrl" class="glightbox pulsating-play-btn"></a>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>

</section>