@model CreateReservationDto
<section id="book-a-table" class="book-a-table section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Sizden Gönlümüzden Bir Masa Ayırın</h2>
        <p><span>Sofraya</span> <span class="description-title">Buyur Eyledik<br></span></p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row g-0" data-aos="fade-up" data-aos-delay="100">

            <div class="col-lg-4 reservation-img"
                 style="background-image: url('@Url.Content("~/yummy-red/assets/img/3-1.png")');">
            </div>

            <div class="col-lg-8 d-flex align-items-center reservation-form-bg" data-aos="fade-up" data-aos-delay="200">
                <form asp-action="CreateReservation" asp-controller="Reservation" method="post" role="form" class="php-email-form">
                    <div class="row gy-4">
                        <div class="col-lg-4 col-md-6">
                            <input type="text" asp-for="NameSurname" class="form-control" id="name" placeholder="İsim Soyisim" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="email" class="form-control"asp-for="Email" id="email" placeholder="Email Adresiniz" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="text" class="form-control" asp-for="PhoneNumber" id="phone" placeholder="Telefon Numaranız" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="date" asp-for="ReservationDate" class="form-control" id="date" placeholder="Rezervasyon Tarihiniz" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="time" class="form-control" asp-for="ReservationTime" id="time" placeholder="Rezervasyon Saatiniz" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="number" class="form-control" asp-for="PeopleCount" id="people" placeholder="Kişi Sayınız" required="">
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <textarea class="form-control" asp-for="Message" rows="5" placeholder="Varsa Mesajınız"></textarea>
                    </div>

                    <div class="text-center mt-3">
                        <div class="loading">Loading</div>
                        <div class="error-message"></div>
                        <div class="sent-message">Rezervasyon talebiniz gönderildi. Rezervasyonunuzu onaylamak için sizi arayacağız veya e-posta göndereceğiz. Teşekkürler!</div>
                        <button type="submit">Rezervasyonu Onayla</button>
                    </div>
                </form>
            </div><!-- End Reservation Form -->

        </div>

    </div>

</section>