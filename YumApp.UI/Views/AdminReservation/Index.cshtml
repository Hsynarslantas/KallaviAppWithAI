@model List<ResultReservationDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}
<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>Rezervasyonlar</h4>
					</div>
					<div class="card-body">
						<table class="table">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Rezervasyon Yapan Kişi</th>
									<th scope="col">Telefon Numarası</th>
									<th scope="col">Rezervasyon Tarihi</th>
									<th scope="col">Rezervasyon Saati</th>
									<th scope="col">Kişi Sayısı</th>
									<th scope="col">Mesaj</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Onayla</th>
									<th scope="col">İptal Et</th>
									<th scope="col">Beklet</th>
								</tr>
							</thead>
							@foreach (var item in Model)
							{
								count++;
								<tbody>
									<tr>
										<td>@count</td>
										<td>@item.NameSurname</td>
										<td>@item.PhoneNumber</td>
										<td>@item.ReservationDate.ToShortDateString()</td>
										<td>@item.ReservationTime</td>
										<td>@item.PeopleCount</td>
										<td>@item.Message</td>
										<td>
											@if (item.Status == true)
											{
												<span class="btn btn-success">Aktif</span>
											}
											else
											{
												<span class="btn btn-success">Pasif</span>
											}
										</td>
										<td><a href="/AdminReservation/DeleteReservation/@item.ReservationId" class="btn btn-danger">Sil</a></td>
										<td><a href="/AdminReservation/UpdateReservation/@item.ReservationId" class="btn btn-warning">Güncelle</a></td>
										<td><a href="/AdminReservation/UpdateReservation/@item.ReservationId" class="btn btn-primary">Onayla</a></td>
										<td><a href="/AdminReservation/UpdateReservation/@item.ReservationId" class="btn btn-dark">İptal</a></td>
										<td><a href="/AdminReservation/UpdateReservation/@item.ReservationId" class="btn btn-info">Beklet</a></td>
									</tr>
								</tbody>
							}
						</table>
						<a href="/AdminReservation/CreateReservation/" class="btn btn-info">Yeni Rezervasyon Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

