@model CreateReservationDto
@{
    ViewData["Title"] = "CreateReservation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>Yeni Rezervasyon Ekleme Sayfası</h4>
					</div>
					<div class="card-body">
						<form method="post">
							<label>Rezervasyon Ad Soyad</label>
							<input type="text" asp-for="NameSurname" class="form-control" />
							<br />
							<label>Mail</label>
							<input type="text" asp-for="Email" class="form-control" />
							<br />
							<label>Telefon Numarası</label>
							<input type="text" asp-for="PhoneNumber" class="form-control" />
							<br />
							<label>Rezervasyon Tarihi</label>
							<input type="date" asp-for="ReservationDate" class="form-control" />
							<br />
							<label>Rezervasyon Saati</label>
							<input type="time" asp-for="ReservationTime" class="form-control" />
							<br />
							<label>Kişi Sayısı</label>
							<input type="text" asp-for="PeopleCount" class="form-control" />
							<br />
							<label>Mesaj / İletmek İstediğiniz</label>
							<input type="text" asp-for="Message" class="form-control" />
							<br />
							<label>Durum</label>
							<input type="text" asp-for="Status" class="form-control" />
							<br />
							<button class="btn btn-outline-success">Rezervasyon Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


