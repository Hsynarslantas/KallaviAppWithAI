@model List<ResultAboutDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>Hakkımızda Alanı</h4>
					</div>
					<div class="card-body">
						<table class="table">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Resim</th>
									<th scope="col">Video Resim Alanı</th>
									<th scope="col">Başlık</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							@foreach (var item in Model)
							{
								count++;
								<tbody>
									<tr>
										<td>@count</td>
										<td><img src="@item.ImageUrl" /></td>
										<td><img src="@item.VideoCoverImageUrl" /></td>
										<td><a href="/AdminAbout/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
										<td><a href="/AdminAbout/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a></td>
									</tr>
								</tbody>
							}
						</table>
						@if (Model.Count == 1)
						{
							<a href="#" class="btn btn-info" onclick="return false;">Hakkımızda Alanı Dolu</a>
						}
						else
						{
							<a href="/AdminAbout/CreateAbout/" class="btn btn-info">Ekle</a>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

