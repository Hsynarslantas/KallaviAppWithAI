@model GetByIdContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4> İletişim Bilgisi Güncelleme Sayfası</h4>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="ContactId" />
							<label>Mail</label>
							<input type="text" asp-for="Mail" class="form-control" />
							<br />
							<label>Adres</label>
							<input type="text" asp-for="Address" class="form-control" />
							<br />
							<label>Telefon Numarası</label>
							<input type="text" asp-for="PhoneNumber" class="form-control" />
							<br />
							<label>Harita Konum Url</label>
							<input type="text" asp-for="MapLocation" class="form-control" />
							<br />
							<label>Açılış / Kapanış Saatleri</label>
							<input type="text" asp-for="OpenHours" class="form-control" />
							<br />
							<button class="btn btn-outline-success">Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

