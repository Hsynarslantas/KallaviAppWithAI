@model List<ResultTestimonialDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>Müşteriler Listesi</h4>
					</div>
					<div class="card-body">
						<table class="table">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Müşteri Görsel</th>
									<th scope="col">İsim Soyisim</th>
									<th scope="col">Ünvan</th>
									<th scope="col">Yorum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							@foreach (var item in Model)
							{
								count++;
								<tbody>
									<tr>
										<td>@count</td>
										<td><img src="@item.ImageUrl" style="width:100px;height:80px;" /></td>
										<td>@item.NameSurname</td>
										<td>@item.Title</td>
										<td>@item.Comment</td>
										<td><a href="/AdminTestimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
										<td><a href="/AdminTestimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
									</tr>
								</tbody>
							}
						</table>
							<a href="/AdminTestimonial/CreateTestimonial/" class="btn btn-info">Müşteri Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
