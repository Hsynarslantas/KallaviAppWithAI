
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>Şefler</h4>
					</div>
					<div class="card-body">
						<table class="table">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Şef Görseli</th>
									<th scope="col">Şef Adı Soyadı</th>
									<th scope="col">Ünvan</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							@foreach (var item in Model)
							{
								count++;
								<tbody>
									<tr>
										<td>@count</td>
										<td><img src="@item.ImageUrl" style="width:80px; height:80px; object-fit:cover; border-radius:8px;"></td>
										<td>@item.NameSurname</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/AdminChef/DeleteChef/@item.ChefId" class="btn btn-danger">Sil</a></td>
										<td><a href="/AdminChef/UpdateChef/@item.ChefId" class="btn btn-success">Güncelle</a></td>
									</tr>
								</tbody>
							}
						</table>
						<a href="/AdminChef/CreateChef/" class="btn btn-info">Yeni Şef Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

