@model List<ResultProductWithCategoryDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>Ürün Listesi</h4>
					</div>
					<div class="card-body">
						<table class="table">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün Görseli</th>
									<th scope="col">Ürün Adı</th>
									<th scope="col">Ürün Fiyatı</th>
									<th scope="col">Ürün Kategorisi</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							@foreach (var item in Model)
							{
								count++;
								<tbody>
									<tr>
										<td>@count</td>
										<td><img src="@item.ProductImageUrl" style="width:50px;height:40px;" /></td>
										<td>@item.ProductName</td>
										<td>@item.ProductPrice</td>
										<td>@item.CategoryName</td>
										<td><a href="/AdminProduct/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
										<td><a href="/AdminProduct/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>
									</tr>
								</tbody>
							}
						</table>
						<a href="/AdminProduct/CreateProduct/" class="btn btn-info">Yeni Ürün Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

