@model GetByIdProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4> Ürün Güncelleme Sayfası</h4>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="ProductId" />
							<label>Ürün Adı</label>
							<input type="text" asp-for="ProductName" class="form-control" />
							<br />
							<label>Ürün Açıklaması</label>
							<input type="text" asp-for="ProductDescription" class="form-control" />
							<br />
							<label>Ürün Fiyatı</label>
							<input type="text" asp-for="ProductPrice" class="form-control" />
							<br />
							<label>Ürün Görsel Url</label>
							<input type="text" asp-for="ProductImageUrl" class="form-control" />
							<br />
							<label>Kategori Id </label>
							<input type="text" asp-for="CategoryId" class="form-control" />
							<br />
							<button class="btn btn-outline-success">Ürünü Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

